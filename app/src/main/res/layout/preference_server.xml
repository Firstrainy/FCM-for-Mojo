<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="?android:listPreferredItemPaddingLeft"
    android:layout_marginEnd="?android:listPreferredItemPaddingRight"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/cardBackground"
    app:cardElevation="2dp"
    app:cardMaxElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/title"
            android:textSize="18sp"
            android:textColor="?android:textColorPrimary"
            tools:text="@string/server_status"/>

        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/text1"
            android:textColor="@color/serverUnknown"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:text="@string/status_waiting_refresh"
            android:drawablePadding="32dp"
            android:drawableStart="@drawable/ic_status_unknown_24dp"
            android:drawableTint="@color/serverUnknown"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
