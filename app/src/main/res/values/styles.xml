<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="preferenceFragmentStyle">@style/AppTheme.PreferenceTheme.PreferenceFragment</item>
    </style>

    <style name="AppTheme.PreferenceTheme.PreferenceFragment" parent="PreferenceFragment.Material">
        <item name="android:layout">@layout/preference_container</item>
    </style>

